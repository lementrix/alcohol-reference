---
import products from "../../data/products";

const { slug } = Astro.params;
const BASE = import.meta.env.BASE_URL;

// ищем продукт по slug
const product = products.find(p => p.slug === slug);

// если вдруг не найден — можно показать 404
if (!product) {
  throw new Error(`Product not found: ${slug}`);
}
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{product.name}</title>
    <style>
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        margin: 0;
        padding: 16px;
        background: #fafafa;
        color: #111;
      }

      .back {
        display: inline-block;
        margin-bottom: 16px;
        text-decoration: none;
        color: #555;
        font-size: 14px;
      }

      .card {
        background: #fff;
        border-radius: 12px;
        padding: 16px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.08);
      }

      .header {
        display: flex;
        gap: 16px;
        align-items: flex-start;
      }

      .image {
        width: 120px;
        flex-shrink: 0;
      }

      .image img {
        width: 100%;
        height: auto;
        object-fit: contain;
      }

      h1 {
        font-size: 22px;
        margin: 0 0 8px;
      }

      .meta {
        font-size: 14px;
        color: #666;
      }

      .section {
        margin-top: 20px;
      }

      .section h2 {
        font-size: 16px;
        margin-bottom: 8px;
      }

      .section ul {
        margin: 0;
        padding-left: 18px;
      }

      .section p {
        margin: 0;
        font-size: 15px;
        line-height: 1.5;
      }
    </style>
  </head>

  <body>
    <!-- BACK -->
    <a class="back" href={BASE}>← Powrót</a>

    <div class="card">
      <!-- HEADER -->
      <div class="header">
        <div class="image">
          <img
            src={`${BASE}${product.image.replace(/^\/+/, "")}`}
            alt={product.name}
            loading="lazy"
          />
        </div>

        <div>
          <h1>{product.name}</h1>
          <div class="meta">
            {product.category} · {product.country} · {product.abv}%
            {product.age ? ` · ${product.age} lat` : ""}
          </div>
        </div>
      </div>

      <!-- KIEDY POLECAĆ -->
      {product.when && (
        <div class="section">
          <h2>Jeśli klient pyta o:</h2>
          <ul>
            {product.when.map(item => <li>{item}</li>)}
          </ul>
        </div>
      )}

      <!-- CO WARTO WIEDZIEĆ -->
      {product.note && (
        <div class="section">
          <h2>Co warto wiedzieć</h2>
          <p>{product.note}</p>
        </div>
      )}
    </div>
  </body>
</html>