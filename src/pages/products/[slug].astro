---
import "../../styles/main.css";

const { slug } = Astro.params;
const BASE = import.meta.env.BASE_URL;

const res = await fetch(
  new URL(`${BASE}data/products.json`, Astro.url)
);
const products = await res.json();

const product = products.find(p => p.slug === slug);

if (!product) {
  throw new Error("Product not found");
}
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{product.name}</title>
  </head>

  <body>
    <a class="back" href={`${BASE}`}>← Powrót</a>

    <div class="card">
      <div class="image">
        <img
          src={`${BASE}${product.image}`}
          alt={product.name}
        />
      </div>

      <div class="info">
        <h1>{product.name}</h1>
        <p class="subtitle">{product.subtitle}</p>

        <ul class="meta">
          <li><strong>Kategoria:</strong> {product.category}</li>
          <li><strong>Kraj:</strong> {product.country}</li>
          <li><strong>ABV:</strong> {product.abv}</li>

          {product.maturation && (
            <li>
              <strong>Dojrzewanie:</strong> {product.maturation}
            </li>
          )}
        </ul>

        {product.whenToOffer?.length > 0 && (
          <section>
            <h2>Dla kogo</h2>
            <ul>
              {product.whenToOffer.map(item => (
                <li>{item}</li>
              ))}
            </ul>
          </section>
        )}

        {product.howToPresent && (
          <section>
            <h2>Jak prezentować</h2>
            <p>{product.howToPresent}</p>
          </section>
        )}

        {product.alternatives?.length > 0 && (
          <section>
            <h2>Służy alternatywą do</h2>
            <ul>
              {product.alternatives.map(item => (
                <li>{item}</li>
              ))}
            </ul>
          </section>
        )}
      </div>
    </div>
  </body>
</html>