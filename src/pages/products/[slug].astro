---
import products from "../../data/products";
import "../../styles/main.css";

const { slug } = Astro.params;
const product = products.find(p => p.slug === slug);

if (!product) {
  throw new Error("Product not found");
}

const BASE = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{product.name}</title>
  </head>

  <body>
    
    <a class="back" href={BASE}>← Powrót</a>

    <div class="card">
      <div class="image">
        <img
          src={`${BASE}${product.image}`}
          alt={product.name}
        />
      </div>

      <div class="content">
        <h1>{product.name}</h1>
        <p class="subtitle">{product.subtitle}</p>

        <ul>
          <li><strong>Kategoria:</strong> {product.category}</li>
          <li><strong>Kraj:</strong> {product.country}</li>
          <li><strong>ABV:</strong> {product.abv}</li>
        </ul>

        {product.whenToOffer && (
          <>
            <h2>When to offer</h2>
            <ul>
              {product.whenToOffer.map(item => <li>{item}</li>)}
            </ul>
          </>
        )}

        {product.howToPresent && (
          <>
            <h2>Co warto wiedzieć</h2>
            <p>{product.howToPresent}</p>
          </>
        )}

        {product.alternatives && (
          <>
            <h2>Alternatywy</h2>
            <ul>
              {product.alternatives.map(a => <li>{a}</li>)}
            </ul>
          </>
        )}

        {product.nose && (
          <>
            <h2>W zapachu</h2>
            <p>{product.nose}</p>
          </>
        )}
      </div>
    </div>
  </body>
</html>