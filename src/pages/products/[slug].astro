---
import products from "../../data/products.json";
import "../../styles/main.css";

/**
 * ОБЯЗАТЕЛЬНО для GitHub Pages
 * Astro должен знать все slug заранее
 */
export async function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
---

<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{product.name}</title>

    <!-- ВАЖНО для GitHub Pages -->
    <base href={import.meta.env.BASE_URL} />
  </head>

  <body data-category={product.category}>
    <a class="back" href={`${import.meta.env.BASE_URL}`}>← Powrót</a>

    <div class="card">
      <div class="image">
        <img
          src={`${import.meta.env.BASE_URL}${product.image}`}
          alt={product.name}
        />
      </div>

      <div class="info">
        <h1>{product.name}</h1>
        <p class="subtitle">{product.subtitle}</p>

        <ul class="meta">
          <li><strong>Kategoria:</strong> {product.category}</li>
          <li><strong>Kraj:</strong> {product.country}</li>
          <li><strong>ABV:</strong> {product.abv}</li>

          {product.maturation && (
            <li>
              <strong>Dojrzewanie:</strong> {product.maturation}
            </li>
          )}
        </ul>

        {product.whenToOffer && (
          <section>
            <h2>Dla kogo</h2>
            <ul>
              {product.whenToOffer.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </section>
        )}

        {product.howToPresent && (
          <section>
            <h2>Jak prezentować</h2>
            <p>{product.howToPresent}</p>
          </section>
        )}

        {product.alternatives && (
          <section>
            <h2>Służy alternatywą do</h2>
            <ul>
              {product.alternatives.map((alt) => (
                <li>{alt}</li>
              ))}
            </ul>
          </section>
        )}
      </div>
    </div>
  </body>
</html>